@{
    var session = new DTCSession(Context.Session);
    int? count = session.GetCartServiceCount();
    string controller = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    string action = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
}

<!DOCTYPE html>
<html>
<head>
    @*<meta charset="utf-8" />*@
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DTC Dental</title>

    @*  Bootstrap and customer css for the application  *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/DTCDentalSite.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DTC_Dental.styles.css" asp-append-version="true" />

    @*  jQuery source files needed by Bootstrap  *@
    <script src="~/lib/popper.js/umd/popper.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>

    @*  jQuery source files needed for data validation  *@
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark custom-navbar-color mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" href="/"></a>
                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <nav class="collapse navbar-collapse" id="navbarSupportedContent">
                    <div class="navbar-nav me-auto">
                        <a class="nav-item nav-link @(controller == "Home" && action == "Index" ? "active" : "")"
                           asp-controller="Home" asp-action="Index">Home</a>
                        <a class="nav-item nav-link @(controller == "Home" && action == "About" ? "active" : "")"
                           asp-controller="Home" asp-action="About">About</a>
                        <a class="nav-item nav-link @(controller == "Patient" && action == "List" ? "active" : "")"
                           asp-controller="Patient" asp-action="List">Patients</a>
                        <a class="nav-item nav-link @(controller == "Dentist" && action == "List" ? "active" : "")"
                           asp-controller="Dentist" asp-action="List">Dentists</a>
                        <a class="nav-item nav-link @(controller == "AppointmentType" && action == "List" ? "active" : "")"
                           asp-controller="AppointmentType" asp-action="List">Appointment Types</a>
                        <a class="nav-item nav-link @(controller == "Appointment" && action == "List" ? "active" : "")"
                           asp-controller="Appointment" asp-action="List">Appointments</a>
                        <a class="nav-item nav-link @(controller == "Service" && action == "List" ? "active" : "")"
                           asp-controller="Service" asp-action="List">Services</a>
                        <a class="nav-item nav-link @(controller == "Visit" && action == "List" ? "active" : "")"
                           asp-controller="Visit" asp-action="List">Visits</a>

                    </div>
                    <div class="navbar-nav ms-auto">
                        <a class="nav-item nav-link @(controller == "Cart" && action == "List" ? "active" : "")"
                           asp-controller="Cart" asp-action="List">Cart
                            <span class="badge bg-light text-dark">@count</span>
                        </a>
                    </div>
                </nav>
            </div>
        </nav>
    </header>

    <div class="container">
        <div>
            @RenderBody()
        </div>
    </div>

    <footer>
        <p class="copyright">©DTC Dental - Team 23</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", false)
</body>
</html>



